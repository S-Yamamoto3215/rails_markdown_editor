<%= form_with(model: document) do |form| %>
  <div data-controller="markdown">
    <div>
      <%= form.label :content, "Markdown Content" %><br>
      <%= form.text_area :content, rows: 10, data: { markdown_target: "input" } %>
    </div>

    <div>
      <h3>Preview:</h3>
      <div data-markdown-target="preview" style="border: 1px solid #ddd; padding: 10px; min-height: 150px;"></div>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
